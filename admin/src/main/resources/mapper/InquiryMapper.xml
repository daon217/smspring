<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.sm.app.repository.InquiryRepository">

    <!-- 관리자 화면에서 사용할 문의 기본 정보 매핑 설정 -->

    <resultMap id="InquiryResultMap" type="edu.sm.app.dto.Inquiry">
        <id property="inquiryId" column="inquiry_id" />
        <result property="custId" column="cust_id" />
        <result property="category" column="category" />
        <result property="status" column="status" />
        <result property="createdAt" column="created_at" />
        <result property="updatedAt" column="updated_at" />
    </resultMap>

    <sql id="inquiryColumns">
        inquiry_id, cust_id, category, status, created_at, updated_at
    </sql>

    <select id="selectAll" resultMap="InquiryResultMap">
        SELECT <include refid="inquiryColumns"/>
        FROM cust_inquiry
        ORDER BY created_at DESC
    </select>

    <select id="select" parameterType="int" resultMap="InquiryResultMap">
        SELECT <include refid="inquiryColumns"/>
        FROM cust_inquiry
        WHERE inquiry_id = #{inquiryId}
    </select>

    <insert id="insert" parameterType="edu.sm.app.dto.Inquiry" useGeneratedKeys="true" keyProperty="inquiryId">
        INSERT INTO cust_inquiry
        (cust_id, category, status, created_at, updated_at)
        VALUES (#{custId}, #{category}, #{status}, NOW(), NOW())
    </insert>

    <update id="update" parameterType="edu.sm.app.dto.Inquiry">
        UPDATE cust_inquiry
        SET category = #{category},
            status = #{status},
            updated_at = NOW()
        WHERE inquiry_id = #{inquiryId}
    </update>

    <delete id="delete" parameterType="int">
        DELETE FROM cust_inquiry WHERE inquiry_id = #{inquiryId}
    </delete>

    <select id="selectByCust" parameterType="string" resultMap="InquiryResultMap">
        <!-- 특정 고객 문의 이력을 조회 -->
        SELECT <include refid="inquiryColumns"/>
        FROM cust_inquiry
        WHERE cust_id = #{custId}
        ORDER BY created_at DESC
    </select>

    <update id="updateStatus">
        <!-- 상담 진행 상황에 맞춰 상태를 업데이트 -->
        UPDATE cust_inquiry
        SET status = #{status},
            updated_at = NOW()
        WHERE inquiry_id = #{inquiryId}
    </update>
</mapper>
